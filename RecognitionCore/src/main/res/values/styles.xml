<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabViewItem">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>

        <item name="android:gravity">left</item>
    </style>

    <style name="TabViewItem.Normal">
        <item name="android:textColor">@drawable/drawer_tab_selector_inverted</item>
    </style>

    <style name="ItemList" />

    <style name="ItemList.Header">
        <item name="android:background">@drawable/list_divider_vertical_nine</item>
    </style>

    <style name="ItemList.HeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7c796e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="ItemList.HeaderLayout">
        <item name="android:background">#7c796e</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ItemList.ItemLayout">
        <item name="android:minHeight">46dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ItemList.ItemText">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/selector_order_list_item</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemList.ItemImage">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>