<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:background="@android:drawable/screen_background_dark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.3" />

    <View
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <GridLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:rowCount="2"
        android:columnCount="1"
        android:layout_height="match_parent">


        <com.mayer.recognition.componenet.camera.CameraFfcRfcButton_
            android:id="@+id/rotateIco"
            android:layout_width="@dimen/toggle_bg_size"
            android:layout_height="@dimen/toggle_bg_size"
            android:background="@drawable/rotate"
            android:textOn=""
            android:textOff=""
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <com.mayer.recognition.componenet.camera.CameraFlashButton_
            android:id="@+id/flashIco"
            android:layout_width="@dimen/toggle_bg_size"
            android:layout_height="@dimen/toggle_bg_size"
            android:focusable="false"
            android:background="@null"
            android:focusableInTouchMode="false" />


    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/take_picture"
        android:background="@null"
        android:src="@drawable/take_a_photo" />

    <com.mayer.recognition.componenet.VerticalSeekBar
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/zoom"
        android:progressDrawable="@drawable/progress"
        android:thumb="@drawable/thumb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>